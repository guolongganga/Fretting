<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--标题-->
    <include layout="@layout/layout_head" />
    <!--个人信息-->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_62.5"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--姓名-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:layout_alignParentLeft="true"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/color_999999"
                    android:textSize="15sp" />

            </RelativeLayout>

            <include layout="@layout/layout_divider_horizontal" />
            <!--姓名-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:layout_alignParentLeft="true"
                    android:text="性别" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/color_999999"
                    android:textSize="15sp" />

            </RelativeLayout>

            <include layout="@layout/layout_divider_horizontal" />

            <!--身份证号-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:layout_alignParentLeft="true"
                    android:text="身份证号" />

                <TextView
                    android:id="@+id/identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/color_999999"
                    android:textSize="15sp" />

            </RelativeLayout>

            <include layout="@layout/layout_divider_horizontal" />
            <!--身份证有效期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:text="身份证有效期" />

                <TextView
                    android:id="@+id/limit_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/dimen_10"
                    android:textColor="@color/color_text_333"
                    android:textColorHint="@color/color_CCCCCC"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:id="@+id/iv_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:src="@drawable/limit_time_iv_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长期有效"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />
            <!--身份证号-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:layout_alignParentLeft="true"
                    android:text="国籍" />

                <TextView
                    android:id="@+id/nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/color_999999"
                    android:textSize="15sp" />

            </RelativeLayout>

            <include layout="@layout/layout_divider_horizontal" />
            <!--职业-->
            <LinearLayout
                android:id="@+id/linearlayout_duty"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:text="职业" />

                <TextView
                    android:id="@+id/duty"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/dimen_10"
                    android:textColor="@color/color_text_333"
                    android:textColorHint="@color/color_CCCCCC"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />
            <!--联系地址-->
            <!--<LinearLayout-->
            <!--android:id="@+id/linearlayout_area"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="48dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:orientation="horizontal"-->
            <!--android:paddingLeft="30dp"-->
            <!--android:paddingRight="15dp">-->

            <!--<TextView-->
            <!--android:layout_width="90dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="联系地址"-->
            <!--android:textColor="@color/color_text_333"-->
            <!--android:textSize="14sp"/>-->

            <!--<TextView-->
            <!--android:id="@+id/address"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center_vertical|right"-->
            <!--android:hint="请选择"-->
            <!--android:paddingLeft="@dimen/dimen_10"-->
            <!--android:textColor="@color/color_text_333"-->
            <!--android:textColorHint="@color/color_696969"-->
            <!--/>-->

            <!--</LinearLayout>-->

            <include layout="@layout/layout_divider_horizontal" />
            <!--详细地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:text="详细地址" />

                <EditText
                    android:id="@+id/address_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="请输入详细地址"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textColor="@color/color_text_333"
                    android:textColorHint="@color/color_CCCCCC"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />
            <!--基金账号-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:layout_alignParentLeft="true"
                    android:text="交易账号" />

                <TextView
                    android:id="@+id/accountid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/color_999999"
                    android:textSize="15sp" />

            </RelativeLayout>

            <include layout="@layout/layout_divider_horizontal" />

            <!--邮箱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="请输入邮箱"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_text_333"
                    android:textColorHint="@color/color_CCCCCC"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />

            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />


            <!--居民税收类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_15">

                <TextView
                    style="@style/text_bold_16"
                    android:text="居民税收类型" />

                <TextView
                    android:id="@+id/residents_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="请选择"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/residents_tax_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="居民涉税信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_15"
                    android:visibility="gone" />


            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />

            <!--下一步-->
            <Button
                android:id="@+id/btn_save"
                style="@style/common_blue_button_rect"
                android:layout_gravity="center_horizontal"
                android:text="保存" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>