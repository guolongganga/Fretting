<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--设置-->
    <include layout="@layout/layout_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical">
                <!--个人信息-->
                <TextView

                    android:id="@+id/personinfo"
                    style="@style/user_setting_line"
                    android:text="个人信息" />

                <include layout="@layout/layout_divider_horizontal" />

                <!--手机号码-->
                <TextView
                    android:id="@+id/phone"
                    style="@style/user_setting_line"
                    android:text="手机号码" />

                <include layout="@layout/layout_divider_horizontal" />

                <!--密码管理-->
                <TextView
                    android:id="@+id/password_manager"
                    style="@style/user_setting_line"
                    android:text="密码管理" />

                <include layout="@layout/layout_divider_horizontal" />

                <!--银行卡号-->
                <TextView
                    android:id="@+id/bankcard"
                    style="@style/user_setting_line"
                    android:text="银行卡号" />
            </LinearLayout>


            <!--邀请码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_54"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/color_FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_17" />

                <!--测评状态-->
                <TextView
                    android:id="@+id/invite_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textIsSelectable="true"
                    android:textColor="@color/color_4D7BFE"
                    android:textSize="@dimen/dimen_16" />


            </LinearLayout>


            <!--风险等级测评-->
            <LinearLayout
                android:id="@+id/risk_test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_54"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/color_FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风险等级测评"
                    android:textColor="@color/color_text_333"
                    android:textSize="@dimen/text_size_17" />

                <!--测评状态-->
                <TextView
                    android:id="@+id/tv_risk_grade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_A4A4A4"
                    android:textSize="@dimen/dimen_16" />

                <ImageView
                    android:id="@+id/icon_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_common_arrow" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical"

                >
                <!--客服电话-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_54"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="客服电话"
                        android:textColor="@color/color_text_333"
                        android:textSize="@dimen/text_size_17" />

                    <TextView
                        android:id="@+id/call_agent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/dimen_15"
                        android:text="拨打"
                        android:textColor="@color/color_4D7BFE"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

                <include layout="@layout/layout_divider_horizontal" />

                <!--关于我们-->
                <TextView
                    android:id="@+id/about_us"
                    style="@style/user_setting_line"
                    android:text="关于我们" />


                <!--切换账户-->
                <!--<TextView-->
                <!--android:id="@+id/change_user"-->
                <!--style="@style/user_setting_line"-->
                <!--android:text="切换账户"-->
                <!--/>-->

            </LinearLayout>


            <!--安全退出-->
            <Button
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_54"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/color_FFFFFF"
                android:text="安全退出"
                android:textColor="@color/color_main"
                android:textSize="@dimen/text_size_17" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>