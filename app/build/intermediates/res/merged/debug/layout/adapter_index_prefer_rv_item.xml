<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--优选定投-->

    <!--基金名称-->
    <TextView
        android:id="@+id/preferred_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="国泰互联网金鑫股票"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_18"/>

    <!--利率-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6">

        <!--利率-->
        <TextView
            android:id="@+id/preferred_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48.93"
            android:textColor="@color/color_main"
            android:textSize="@dimen/text_size_30"/>

        <!--百分号-->
        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/preferred_rate"
            android:layout_toRightOf="@id/preferred_rate"
            android:text="%"
            android:textColor="@color/color_main"
            android:textSize="@dimen/dimen_20"/>
    </RelativeLayout>

    <!--利率描述 近一年收益率-->
    <TextView
        android:id="@+id/tv_rate_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="近一年收益率"
        android:textColor="@color/color_A4A4A4"
        android:textSize="@dimen/text_size_12"/>

    <!--立即定投 按钮-->
    <Button
        android:id="@+id/btn_invest"
        style="@style/common_red_button_circle"
        android:layout_width="@dimen/dimen_160"
        android:layout_height="@dimen/dimen_36"
        android:layout_marginBottom="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_13"
        android:text="立即定投"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/text_size_16"/>

</LinearLayout>