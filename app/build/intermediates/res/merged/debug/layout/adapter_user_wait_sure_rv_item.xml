<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_73">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/text_size_15">

        <TextView
            android:id="@+id/tv_fund_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基金名称"
            android:textColor="@color/color_383F50"
            android:textSize="@dimen/text_size_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="业务类型"
                android:textColor="@color/color_text_333"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="金额/份额"
                android:textColor="@color/color_text_333"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="申请时间"
                android:textColor="@color/color_text_333"
                android:textSize="@dimen/text_size_12"/>
            <TextView
                android:id="@+id/tv_paystatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="支付成功"
                android:textColor="@color/color_text_333"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/text_size_15"
        android:layout_marginRight="@dimen/text_size_15"
        style="@style/divider_half_e7"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
