<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_marginBottom="@dimen/dimen_10"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!--撤单-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--基金名称-->
            <TextView
                android:id="@+id/tv_fund_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="XXXXXX基金"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"/>
            <!--交易类型，买入或卖出-->
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue_line_rect"
                android:gravity="center"
                android:padding="@dimen/dimen_5"
                android:text="买入"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

        <!--基金代码-->
        <TextView
            android:id="@+id/tv_fund_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="050001"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>
        <!--交易时间-->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-10 17:59"
            android:textColor="@color/color_696969"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

    <!--交易金额-->
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.00元"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold"/>
    <!--撤单按钮-->
    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="撤单"
        android:textSize="14dp"
        style="@style/common_red_button_circle"/>
</LinearLayout>