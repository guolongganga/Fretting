<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">
    <!--注册成功-->
    <include layout="@layout/layout_head"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:text="@string/user_register_success_congratulation"
        android:textColor="@color/color_text_333"
        android:textSize="@dimen/text_size_16"/>
    <!--姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_66"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/user_register_success_name"
            style="@style/text_bold_16"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="张三"
            android:textColor="@color/color_text_333"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/layout_divider_horizontal"/>

    <!--身份证号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_66"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/user_register_success_identity"
            style="@style/text_bold_16"/>

        <TextView
            android:id="@+id/identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="21078222919293***23"
            android:textColor="@color/color_text_333"
            android:textSize="14sp"/>

    </LinearLayout>

    <include layout="@layout/layout_divider_horizontal"/>

    <Button
        android:id="@+id/btn_finish"
        style="@style/common_blue_button_rect"
        android:layout_marginBottom="@dimen/dimen_13"
        android:text="@string/user_common_finish"/>

    <Button
        android:id="@+id/risk_test"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:text="@string/user_register_success_risk"
        android:textColor="@color/color_407FE7"
        android:textSize="@dimen/text_size_12"/>

</LinearLayout>