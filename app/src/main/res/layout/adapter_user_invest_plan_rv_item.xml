<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fund_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxx基金"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_fund_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（003994）"
                android:layout_marginLeft="@dimen/dimen_5"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定投方式:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_invest_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:text="每周三定投10.00元"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付渠道:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:text="招商银行储蓄卡"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_bank_tail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:text="（2339）"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下个扣款日:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_next_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:text="2017-12-27"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_invest_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:text="【定投中】"
        android:textColor="@color/color_1a7bcd"
        android:textSize="@dimen/dimen_18"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_30"
        android:src="@drawable/icon_common_arrow_right"/>
</RelativeLayout>