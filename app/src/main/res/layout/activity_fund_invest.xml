<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--不使用-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_head"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:paddingLeft="45dp">
            <!--银行logo-->
            <ImageView
                android:id="@+id/bank_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher_round"/>
            <!--银行名称和尾号 招商银行(2339)-->
            <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/bank_image"
                android:text="招商银行(2339)"
                android:textColor="@color/color_text_333"
                android:textSize="14dp"/>
            <!--限额 单笔上限10万，单日限额50万-->
            <TextView
                android:id="@+id/bank_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bank_image"
                android:text="单笔上限10万，单日限额50万"
                android:textColor="@color/color_text_333"
                android:textSize="@dimen/dimen_12"/>
            <!--更换-->
            <TextView
                android:id="@+id/tv_change"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center"
                android:text="@string/fund_change"
                android:textColor="@color/color_1862b7"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--金额-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:text="每期定投"/>
            <!--金额输入-->
            <EditText
                android:id="@+id/et_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="最低购买金额XX元"
                android:inputType="numberDecimal"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_696969"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white">
            <!--金额-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:text="定投周期"/>
            <!--金额输入-->
            <TextView
                android:id="@+id/tv_invest_week"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_blue_line_rect"
                android:gravity="center"
                android:hint="请选择"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_696969"
                android:textSize="@dimen/text_size_14"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white">
            <!--金额-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:text="定投日"/>
            <!--金额输入-->
            <TextView
                android:id="@+id/tv_invest_day"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_blue_line_rect"
                android:gravity="center"
                android:hint="请选择"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_696969"
                android:textSize="@dimen/text_size_14"/>
        </RelativeLayout>
        <!--确定购买-->
        <Button
            android:id="@+id/sure"
            style="@style/common_red_button_circle"
            android:text="@string/fund_sure"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>
    <!--公司提供-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fund_support_one"
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fund_support_two"
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>
</RelativeLayout>
