<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15">
    <!--自选基金-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textSize="@dimen/dimen_15"
            android:text="招商安泰股票"
            android:textColor="@color/color_383F50"/>

        <TextView
            android:id="@+id/tv_own"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_name"
            android:background="@drawable/bg_red_rect_sign"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_3"
            android:paddingRight="@dimen/dimen_3"
            android:paddingTop="@dimen/dimen_1"
            android:paddingBottom="@dimen/dimen_1"
            android:textSize="@dimen/text_size_11"
            android:text="持有"
            android:textColor="@color/white"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:text="217001"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_97A1B7"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_value"
        android:layout_width="@dimen/dimen_100"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0.3948"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/color_383F50"/>

    <TextView
        android:id="@+id/tv_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+5.36%"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/color_main"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_divider"/>

</RelativeLayout>